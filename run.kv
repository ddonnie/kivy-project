<Controller>:
    mincontainer: mincontainer.__self__
    id: bl
    popup: increment.__self__
    intervalcontainer: intervalcontainer.__self__
    GridLayout:
        rows: 3

        GridLayout:   #Buttons + and -
            size_hint: 1,.1
            cols: 2

            Button:
                text: '-'
                background_color: 2.55, 0, 0, 1
                on_release:
            Button:
                text: '+'
                background_color: .27,.94,.32, 1
                on_release: increment.open()

        GridLayout: #Interval Container
            id: intervalcontainer
            cols: 1

        Button:    #'Set' Button
            size_hint: 1,.1
            text: 'Set'

    Popup:
        id: increment
        on_parent: if self.parent == bl: bl.remove_widget(self)
        content: popupcontent

        GridLayout:
            id: popupcontent
            rows: 2

            FloatLayout:

                ScrollView:
                    size_hint: None, None
                    size: 100, 320
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    GridLayout:
                        id: mincontainer
                        cols: 1
                        padding: 0
                        spacing: 0
                        height: self.minimum_height
                        do_scroll_x: False
                        size_hint: None, None

            Button:
                anchor_y: 'Bottom'
                text: 'Set'
                size_hint: 1,.1
                size: 100,50
                on_press: increment.dismiss()


<ScrollButton>:
    size_hint: None, None
    size: 100, 50












