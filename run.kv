<Controller>:
    id: bl
    popup: increment.__self__
    intervalcontainer: intervalcontainer.__self__
    minutes: minutes.__self__
    setbutton: setbutton
    GridLayout:
        rows: 3

        GridLayout:   #Buttons + and -
            size_hint: 1,.1
            cols: 2

            Button:
                text: '-'
                background_color: 2.55, 0, 0, 1
                on_release: root.remove_interval()
            Button:
                text: '+'
                background_color: .27,.94,.32, 1
                on_release: increment.open()

        GridLayout: #Interval Container
            id: intervalcontainer
            cols: 1

        Button:    #'Set' Button
            size_hint: 1,.1
            text: 'Set'

    Popup:
        id: increment

        on_parent: if self.parent == bl: bl.remove_widget(self)
        content: popupcontent

        FloatLayout:
            id: popupcontent
            rows: 2

            Carousel:
                id:minutes
                loop: True
                direction: 'bottom'
                pos_hint: {'center_x': .5, 'center_y': .5}

            Button:
                id: setbutton
                anchor_y: 'Bottom'
                text: 'Set'
                size_hint: 1,.1
                pos_hint: {'center_x': .5}
                on_press: root.set_interval()












